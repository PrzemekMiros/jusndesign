<section class="pt-small pt-md-medium pb-medium pb-md-large bg-light-2" id="realizacje">
    <div class="container">
        <p class="my-0 fade-in color-accent-1">Zobacz jak prezentują się </p>
        <h2 class="xl split-lines mt-0 mb-4 mb-md-5">Nasze namioty w naturalnym środowisku</h2>
        <div class="swiper swiper-works">
            <div class="swiper-wrapper">
                {% for post in collections.works | byLang(lang) %}
                <div class="swiper-slide">
                    <div class="work-card bg-light-1 rounded-md">
                        <a href="{{ post.data.thumbnail | url }}" 
                           class="glightbox work-image-wrap rounded-md" 
                           data-no-swup
                           data-gallery="portfolio"
                           data-glightbox="title: {{ post.data.title }}; description: .custom-desc-{{ loop.index }}">
                        
                            <svg class="img-wrapper-icon" width="34px" height="34px" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" version="1.1" fill="none" stroke="#000000" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5">
<polyline points="8.25 2.75,2.75 2.75,2.75 13.25,13.25 13.25,13.25 7.75" stroke="#fff"/>
<path d="m13.25 2.75-5.5 5.5m3-6.5h3.5v3.5" stroke="#fff"/>
</svg>
    {% workImage "src/" + post.data.thumbnail, post.data.title %}
                        </a>

                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        <button class="magnetic swiper-button-prev fade-in" data-strength="60" tabindex="0" aria-label="Previous slide">
            <svg viewBox="0 0 61 61" xmlns="http://www.w3.org/2000/svg" width="61" height="61" fill="none">
                <circle cx="30.5" cy="30.5" r="30" stroke="var(--color-dark-2)"></circle>
                <path d="M34.5 24L27 31.5L34.5 39" stroke-width="2" stroke="var(--color-dark-2)"></path>
            </svg>
        </button>
        <button class="magnetic swiper-button-next fade-in" data-strength="60" tabindex="0" aria-label="Next slide">
            <svg viewBox="0 0 61 61" xmlns="http://www.w3.org/2000/svg" width="61" height="61" fill="none">
                <circle cx="30.5" cy="30.5" r="30" stroke="var(--color-dark-2)"></circle>
                <path d="M28 24L35.5 31.5L28 39" stroke-width="2" stroke="var(--color-dark-2)"></path>
            </svg>
        </button>
        <div class="fade-in">
            <div class="swiper-scrollbar"></div>
        </div>
    </div>
</section>

<style>
.glightbox-container .gslide-inner-content {
  max-width: 900px;
  max-height: 90vh;
  border-radius: 8px;
  box-shadow: 0 0 50px #1111;
  overflow: hidden;
}
.glightbox-clean .gdesc-inner {
  padding: 0px 30px 30px;
}
@media (min-width: 769px) {
  .goverlay {
    background: rgba(0, 0, 0, 0.92);
  }
}
</style>

