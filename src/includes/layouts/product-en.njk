{% include "partials/header.njk" %}

<article class="product-page pt-xlarge">
  <div class="container">
    <div class="bg-light-1 rounded-md p-3 p-md-5">
      <div class="p-md-3">

      <div class="product-main row">
        <div class="col-md-6 product-gallery">
          <a href="{{ productImage | url }}" class="lightbox-trigger" data-no-swup data-lightbox-src="{{ productImage | url }}">
            <img src="{{ productImage }}" alt="{{ title }}" class="main-image">
          </a>
          {% if galleryImages and galleryImages.length %}
            <div class="gallery-thumbs">
              {% for image in galleryImages %}
                <a href="{{ image | url }}" class="lightbox-trigger" data-lightbox-src="{{ image | url }}">
                  <img src="{{ image }}" alt="{{ title }} - {{ loop.index }}" class="thumb-image rounded-md">
                </a>
              {% endfor %}
            </div>
          {% endif %}
        </div>

        <div class="col-md-6 product-info">
          {% include "partials/breadcrumbs.njk" %}

          <h1 class="h2 product-title">{{ title }}</h1>

          <!--
          <div class="product-price h2">
            <span class="amount">{{ price }}</span>
            <span class="currency">PLN</span>
          </div>
          -->

          <div class="product-status">
            <div class="product-short-description">
              {{ description }}
            </div>
            <p class="vin-notice">
           <strong>Note:</strong> Please contact us with your vehicle's VIN number and a photo of the installation area to verify compatibility.
            </p>
          </div>

          <div class="actions">
            <a href="https://ore4x4.pl/en/103-pick-up-hardtops-canopies" title="Go to shop" class="button-anim btn-write magnetic mt-2 fade-in" data-strength="40">
              <div class="button-anim-text">
              <span>Go to shop</span>
              <span>Go to shop</span>
              </div>
              <div class="button-anim-icon">
                <svg height="18" viewBox="0 0 100 100" width="18" xmlns="http://www.w3.org/2000/svg" class="icon-link" style="enable-background:new 0 0 100 100" version="1.1" x="0px" xml:space="preserve" xmlns:xlink="http://www.w3.org/1999/xlink" y="0px">
                  <g>
                    <path d="M83.3,79.7c0,2-1.6,3.6-3.6,3.6H20.3c-2,0-3.6-1.6-3.6-3.6V20.3c0-2,1.6-3.6,3.6-3.6h23.4V9.5H20.3   c-6,0-10.8,4.8-10.8,10.8v59.4c0,6,4.8,10.8,10.8,10.8h59.4c6,0,10.8-4.8,10.8-10.8V56.3h-7.2V79.7z" fill="var(--color-accent-1)"></path>
                    <polygon fill="var(--color-accent-1)" points="56.3,9.5 56.3,16.7 78.2,16.7 49.9,45 55,50.1 83.3,21.8 83.3,43.7 90.5,43.7 90.5,9.5  "></polygon>
                  </g>
                </svg>
              </div>
            </a>
            <a href="mailto:biuro@twojsklep.pl?subject=Zapytanie o produkt: {{ title }}" title="Ask about the product" class="button-anim btn-write magnetic mt-2 fade-in" data-strength="40">
              <div class="button-anim-text">
<span>Ask about the product</span>
<span>Ask about the product</span>
              </div>
              <div class="button-anim-icon">
                <svg height="18" viewBox="0 0 100 100" width="18" xmlns="http://www.w3.org/2000/svg" class="icon-link" style="enable-background:new 0 0 100 100" version="1.1" x="0px" xml:space="preserve" xmlns:xlink="http://www.w3.org/1999/xlink" y="0px">
                  <g>
                    <path d="M83.3,79.7c0,2-1.6,3.6-3.6,3.6H20.3c-2,0-3.6-1.6-3.6-3.6V20.3c0-2,1.6-3.6,3.6-3.6h23.4V9.5H20.3   c-6,0-10.8,4.8-10.8,10.8v59.4c0,6,4.8,10.8,10.8,10.8h59.4c6,0,10.8-4.8,10.8-10.8V56.3h-7.2V79.7z" fill="var(--color-accent-1)"></path>
                    <polygon fill="var(--color-accent-1)" points="56.3,9.5 56.3,16.7 78.2,16.7 49.9,45 55,50.1 83.3,21.8 83.3,43.7 90.5,43.7 90.5,9.5  "></polygon>
                  </g>
                </svg>
              </div>
            </a>

          </div>

          <div class="trust-badges">
            <p>Safe shopping guaranteed</p>
          </div>
        </div>
      </div>

      <div class="product-details rounded-md bg-light-2  py-3 px-3 px-md-5 mt-5">
        <section class="details-tab">
          <h2 class="section-title">Product details</h2>
          
          <div class="specs-grid bg-light-1 p-4">
            <div class="spec-item small">
              <strong>Material:</strong> {{ material }}
            </div>
            <div class="spec-item small">
              <strong>Production process</strong> {{ process }}
            </div>
            <div class="spec-item small">
                <strong>Installation:</strong>
                Difficulty {{ installation.difficulty }}/5 | Professional required: {{ "Yes" if installation.professional_required else "No" }}
            </div>
            <div class="spec-item small">
              <strong>Weight:</strong> {{ weight }}
            </div>
          </div>

          <div class="description-content">
            {{ content | safe }}
          </div>
        </section>
      </div>

      </div>
    </div>
  </div>
</article>

<div class="lightbox" id="lightbox" aria-hidden="true">
  <div class="lightbox-backdrop" data-lightbox-close></div>
  <div class="lightbox-content" role="dialog" aria-modal="true" aria-label="ZdjÄ™cie produktu">
    <button type="button" class="lightbox-close" data-lightbox-close>X</button>
    <img src="" alt="" class="lightbox-image" id="lightbox-image">
  </div>
</div>


{% include "partials/footer.njk" %}

