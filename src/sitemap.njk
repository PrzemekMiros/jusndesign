---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
layout: null
---
{%- set baseUrl = "https://jusndesignpoland.com" -%}
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {%- for item in collections.all %}
        {%- if item.url and item.url != "/sitemap.xml" and item.url != "/robots.txt" and item.data.robots != "noindex" and item.data.eleventyExcludeFromCollections != true %}
        <url>
            <loc>{{ baseUrl }}{{ item.url }}</loc>
            {%- if item.date %}
            <lastmod>{{ item.date.toISOString() }}</lastmod>
            {%- endif %}
        </url>
        {%- endif %}
    {%- endfor %}
</urlset>
